<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DocListActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/QuesbtnColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingStart="35dp"
            android:text="Doctor List"
            android:textSize="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/BlueText" />

        <ImageView
            android:id="@+id/DocHomeIVID"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:src="@drawable/homeicon"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">




    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="15dp"
        app:cardCornerRadius="20dp"
        android:layout_margin="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:src="@drawable/doctor"
                android:layout_gravity="center"
                android:layout_marginLeft="20sp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/BlueText"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Waziul Alam Chowdhury"
                    android:textSize="22sp"
                    android:textColor="@color/BlueText"
                    android:textStyle="bold"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senior Consultant Psychiatrist (Mental Health)"
                    android:textSize="18sp"
                    android:textColor="@color/BlueText"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: Square Hospital (Panthapath)"
                    android:textColor="@color/BlueText"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cell: 0186555"
                    android:textColor="@color/BlueText"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Day: Sunday-wednesday"
                    android:textColor="@color/BlueText"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time: 5:00pm - 9:00pm"
                    android:textColor="@color/BlueText"
                    android:textSize="18sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    >

                    <Button
                        android:id="@+id/DocACallbtnID"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:text="Call"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:background="@drawable/btn_bg_design_layout"
                        android:layout_marginLeft="5dp"
                        android:textAllCaps="false"/>

                    <Button
                        android:id="@+id/DocAappointbtnID"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_bg_design_layout"
                        android:text="Appointment"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:textAllCaps="false"/>


                </RelativeLayout>



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


