<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_style_layout"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/WelcomeTVID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textSize="30dp"
        android:textColor="@color/BlueText"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="45dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to continue"
        android:textSize="18dp"
        android:layout_below="@+id/WelcomeTVID"
        android:textColor="@color/BlueText"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="45dp"/>

    <EditText
        android:id="@+id/usernameET"
        android:layout_width="285sp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textSize="17dp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/WelcomeTVID"
        android:layout_marginTop="170dp"
        android:backgroundTint="@color/BlueText"
        android:textColor="@color/BlueText"
        android:textColorHint="@color/BlueText"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/passwordET"
        android:layout_width="285sp"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_marginTop="20sp"
        android:paddingLeft="15dp"
        android:layout_below="@+id/usernameET"
        android:inputType="textPassword"
        android:textSize="17dp"
        android:backgroundTint="@color/BlueText"
        android:textColor="@color/BlueText"
        android:textColorHint="@color/BlueText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loginButtonID"
        android:layout_width="285sp"
        android:layout_height="45dp"
        android:text="Log In"
        android:layout_marginTop="50dp"
        android:textSize="18sp"
        android:layout_below="@+id/passwordET"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg_design_layout" />

    <LinearLayout
        android:id="@+id/layoutOneID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginButtonID"
        android:layout_marginTop="18sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvOneID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/signUpTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="16sp"
            android:textColor="@color/BlueText"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutOneID"
        android:layout_marginTop="6sp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvTwoID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or, Login as"
            android:textSize="16sp"
            android:textColor="#000" />

        <TextView
            android:id="@+id/DocLoginTVID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor"
            android:textSize="16sp"
            android:textColor="@color/BlueText"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"/>



    </LinearLayout>








</RelativeLayout>